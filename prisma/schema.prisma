generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id     Int     @id @default(autoincrement())
  name   String
  number String  @unique
  Order  Order[]
}

enum OrderStatus {
  NEW // pedido criado, mas n√£o visto
  PENDING // em preparo ou aguardando pagamento
  FINISHED // entregue ou finalizado
  CANCELLED // cancelado pelo cliente ou sistema
}

model Order {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  total     Int // Total em centavos

  user   User        @relation(fields: [userId], references: [id])
  userId Int
  status OrderStatus @default(NEW) // novo campo
  items  OrderItem[]
}

model OrderItem {
  id      Int   @id @default(autoincrement())
  order   Order @relation(fields: [orderId], references: [id], onDelete: Cascade)
  orderId Int

  title        String
  subtitle     String
  descriptio   String?
  price        String
  priceInCents Int
  qtd          Int
  final_price  Int?
}
